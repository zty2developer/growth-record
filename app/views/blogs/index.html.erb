<div class="blog col-xs-8 col-xs-offset-2">
	<div class="blog-category_list_wrapper">
		<ul class="blog-category_list">
			<li class="blog-category"><a class="blog-category_link category_active">All</a></li>
		<% @categories.each do |category| %>
			<li class="blog-category"><%= link_to "#{category.name}", blog_path(category_id: category.id), class: "blog-category_link" %></li>
		<% end %>
		</ul>
	</div>

	<div class="blog-post_list">
		<% @posts.each do |post| %>
		<div class="blog-post col-xs-4">
			<a href="/posts/<%= post.id %>"><%= image_tag "#{post.category.background.url}", class: "blog-category_background" %></a>
			<p class="blog-category_name"><%= post.category.name %></p>
			<p class="blog-post_title"><%= link_to "#{post.title}", post_path(post), class: "blog-post_title_link" %></p>
			<p class="blog-post_body"><%= post.body.truncate(200) %></p>
		</div>
		<% end %>
		<%= paginate @posts %>
	</div>
</div>
